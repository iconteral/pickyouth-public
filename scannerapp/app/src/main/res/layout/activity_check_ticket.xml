<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#fff"
             tools:context=".CheckTicketActivity">


        <SurfaceView android:layout_width="match_parent" android:layout_height="match_parent"
                     android:id="@+id/sv_barcode"
        />

        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="0.65"></RelativeLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp"
                            android:layout_gravity="bottom" android:background="#fff" android:layout_weight="0.3">

                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical"
                android:layout_margin="15sp">

                    <TextView
                            android:text="就绪"
                            android:textColor="#E91E63"
                            android:textSize="50dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/tv_ready"
                            android:visibility="gone"
                            android:gravity="center"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="票" android:textSize="20dp" android:textColor="#000000" android:id="@+id/tv_check_title"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_marginTop="10dp"
                              android:text="状态"
                              android:id="@+id/tv_used"
                              android:textColor="#000000"
                              android:textSize="40dp"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_marginTop="10dp"
                              android:text="时间"
                              android:id="@+id/tv_used_date"
                              android:textColor="#000000"
                              android:textSize="40dp" />

                    <Button
                            android:text="过"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/btn_check_ticket"/>
                </LinearLayout>





            </RelativeLayout>
        </LinearLayout>



</FrameLayout>